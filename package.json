{
  "name": "api-mcp-server",
  "version": "1.0.5",
  "description": "MCP Server for OpenAPI Specification",
  "main": "dist/index.js",
  "bin": {
    "api-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts --transport http --port 3001 --doc-url xxx",
    "build": "tsc",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "start": "node dist/cli.js",
    "debug": "npx @modelcontextprotocol/inspector",
    "prepublishOnly": "pnpm run build",
    "example": "ts-node src/examples/index.ts"
  },
  "keywords": [
    "mcp",
    "server",
    "typescript",
    "swagger",
    "openapi"
  ],
  "author": "bluechenchenchen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluechenchenchen/api-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/bluechenchenchen/api-mcp-server/issues"
  },
  "homepage": "https://github.com/bluechenchenchen/api-mcp-server#readme",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@modelcontextprotocol/sdk": "^1.13.3",
    "@types/express": "^5.0.3",
    "axios": "^1.11.0",
    "commander": "^14.0.0",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "zod": "^4.0.9"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
